<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spy.healthmatic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="24" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.spy.healthmatic.MainActivity" />
        <activity
            android:name="com.spy.healthmatic.Welcome.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.spy.healthmatic.Welcome.Login" />
        <activity
            android:name="com.spy.healthmatic.MainActivity2"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.spy.healthmatic.Doctor.MainDrActivity"
            android:label="@string/title_activity_main_dr"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.spy.healthmatic.Doctor.PatientDrActivity"
            android:label="@string/title_activity_patient_dr"
            android:parentActivityName="com.spy.healthmatic.Doctor.MainDrActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spy.healthmatic.Doctor.MainDrActivity" />
        </activity>
    </application>

</manifest>